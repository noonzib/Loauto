<UserControl x:Class="Loauto.CustomControl.GemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Loauto.CustomControl"
             mc:Ignorable="d" HorizontalAlignment="Center" VerticalAlignment="Center" 
             Margin="4" Height="110">
    <Viewbox Stretch="Uniform">
        <Border BorderThickness="2" Background="{DynamicResource MaterialDesignPaper}" BorderBrush="{DynamicResource PrimaryHueMidBrush}" CornerRadius="100" Padding="8" Height="70" Width="70">
            <Grid >
                <Image x:Name="GemImage" Source="{Binding Icon}" RenderOptions.BitmapScalingMode="HighQuality" StretchDirection="DownOnly" />
                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="GemLevel" TextWrapping="Wrap" Text="{Binding Level}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Viewbox>
            </Grid>
        </Border>
    </Viewbox>
</UserControl>
